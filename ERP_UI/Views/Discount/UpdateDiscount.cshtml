@model CreateUpdateDiscountVM
@{
    ViewBag.Title = "Update discount";
    Layout = "_Layout";

}
<h1 class="CHeading">Update Discount</h1>
<div class="ViewDetails">
    @using (Html.BeginForm("UpdateDiscount", "Discount", FormMethod.Post, new { id = "update-discount-form" }))
    {
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.DiscountName, new { @class = "Required" })
                    @Html.TextBoxFor(model => model.DiscountName, new { @class = "form-control", required = "Required" })
                    @Html.ValidationMessageFor(model => model.DiscountName)
                </div><!-- form-group -->
            </div><!-- col -->
        </div><!-- row -->
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.DiscountType)
                    @Html.DropDownListFor(model => model.DiscountType, Model.DiscountTypes, new { @class = "form-control Searchable" })
                    @Html.ValidationMessageFor(model => model.DiscountType)
                </div><!-- form-group -->
            </div><!-- col -->
        </div><!-- row -->
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.DiscountValue, new { @class = "Required" })
                    @Html.EditorFor(model => model.DiscountValue, new { htmlAttributes = new { @class = "form-control NumInput intMask", type = "text", required = "Required" } })
                    @Html.ValidationMessageFor(model => model.DiscountValue)
                </div><!-- form-group -->
            </div><!-- col -->
        </div><!-- row -->

        <div class="row">
            <div class="col-sm-12 text-right">
                <div class="FormBtns" role="group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-default">Cancel</button>
                </div><!-- FormBtns -->
            </div><!--col -->
        </div><!-- row -->
    }
</div>